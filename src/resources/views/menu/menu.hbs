<div class="menu container">
    <h3 class="menu__title">Hôm nay Trunka có gì?</h3>
    <div class="row menu__box">
        <div class="col-xl-3 menu__nav">
            <ul class="menu__nav-list">
                Các loại đồ uống:
                <li class="menu__nav-item">
                    <a href="#1" class="menu__nav-item-link">Trà nướng</a>
                </li>
                <li class="menu__nav-item">
                    <a href="#2" class="menu__nav-item-link">Trà sữa</a>
                </li>
                <li class="menu__nav-item">
                    <a href="#3" class="menu__nav-item-link">Cafe</a>
                </li>
                <li class="menu__nav-item">
                    <a href="" class="menu__nav-item-link">Trà nướng</a>
                </li> 
            </ul>
        </div>
        <div class="col-xl-9 menu__main">
            <h3 id="1" class="menu__main-class-title">Menu</h3>
            <br>
            <div class="row menu__main-class">
                {{#each products}}
                <div class="col-xl-4 menu__main-item">
                    <a href="/menu/item/{{this.slug}}">
                        <img src="{{this.img}}" alt="Hình ảnh sản phẩm minh họa" class="menu__main-item-img w-100">
                        <h5 class="menu__main-item-title">{{this.name}}</h5>
                        <p class="menu__main-item-price">{{this.price}} đ</p>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>