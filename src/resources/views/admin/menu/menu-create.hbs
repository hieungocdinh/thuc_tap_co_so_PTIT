<div class="container">
    <br>
    <h3>Thêm món mới vào menu</h3>
    <br>
</div>
<form class="admin__menu-create container" action="/admin/menu/stored" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Tên món</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên món" required>
    </div>  
    <div class="form-group">
        <label for="img">Hình ảnh mô tả</label>
        <input type="file" class="form-control-file" id="img" name="img">
    </div>
    <div class="form-group">
        <label for="type">Loại đồ uống</label>
        <input type="text" class="form-control" id="type" name="type" placeholder="Nhập loại đồ uống" required>
    </div>
    <div class="form-group">
        <label for="price">Giá tiền</label>
        <input type="number" class="form-control" id="price" name="price" placeholder="Nhập giá tiền" min="5000" step="5000" required>
    </div>
    <div class="form-group">
        <label for="description">Mô tả</label>
        <textarea class="form-control" id="description" name="description" rows="5" placeholder="Nhập mô tả" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary" value="upload">Thêm vào menu</button>
</form>

