<div class="admin__menu">
    <div class="admin__menu-header">
        <h2>Tài khoản</h2>
        <div class="">
            <button class="admin__menu-header-btn">
            <a href="/admin/user/deleted">Tài khoản đã xóa</a>
            </button>
            <button class="admin__menu-header-btn">
                <a href="/admin/user/create">Thêm tài khoản</a>
            </button>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên tài khoản</th>
                <th scope="col">Mật khẩu</th>
                <th scope="col">Loại tài khoản</th>
                <th scope="col">Email</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col" colspan="4">Họ và tên</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td class="admin__menu-item">{{this.username}}</td>
                    <td class="admin__menu-item">{{this.password}}</td>
                    <td class="admin__menu-item">{{this.type}}</td>
                    <td class="admin__menu-item">{{this.email}}</td>
                    <td class="admin__menu-item">{{this.phoneNum}}</td>
                    <td class="admin__menu-item">{{this.name}}</td>
                    <td class="admin__menu-item">
                        <a href="user/edit/{{this._id}}" class="">Sửa</a>
                    </td>
                    <td class="admin__menu-item">
                        <a href="" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-user-modal">Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="delete-user-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xác nhận xóa tài khoản?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa tài khoản này không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-danger" id="btn-delete-user" >Xóa</button>
      </div>
    </div>
  </div>
</div>

{{!-- delete hiden form --}}
<form id="delete-user-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var userId;
        var btnDeleteUser = document.getElementById('btn-delete-user');
        var deleteForm = document.getElementById('delete-user-form');

        //When the dialog confirm button is clicked
        $('#delete-user-modal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            userId = button.data('id');
            console.log(userId);  
        });

        btnDeleteUser.onclick = function() {
            deleteForm.action = 'user/delete/' + userId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>